<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>Servlets.AboutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxCheckSignUp</servlet-name>
        <servlet-class>AjaxServlet.AjaxCheckSignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxExit</servlet-name>
        <servlet-class>AjaxServlet.AjaxExitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxRestoring</servlet-name>
        <servlet-class>AjaxServlet.AjaxRestoringServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmationServlet</servlet-name>
        <servlet-class>Servlets.ConfirmationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonalAccount</servlet-name>
        <servlet-class>Servlets.PersonalAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Error</servlet-name>
        <servlet-class>Servlets.ErrorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxChangeAccount</servlet-name>
        <servlet-class>AjaxServlet.AjaxChangeAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeAccount</servlet-name>
        <servlet-class>Servlets.ChangeAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Friends</servlet-name>
        <servlet-class>Servlets.FriendsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxFriends</servlet-name>
        <servlet-class>AjaxServlet.AjaxFriendServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Magazine</servlet-name>
        <servlet-class>Servlets.MagazineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateMagazine</servlet-name>
        <servlet-class>Servlets.CreateMagazineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Loader</servlet-name>
        <servlet-class>Helper.LoaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjaxMagazineReview</servlet-name>
        <servlet-class>AjaxServlet.AjaxMagazineReviewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatMagazineIssue</servlet-name>
        <servlet-class>Servlets.CreateMagazineCopyServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxCheckSignUp</servlet-name>
        <url-pattern>/ajax_check_sign_up</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxExit</servlet-name>
        <url-pattern>/ajax_exit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxRestoring</servlet-name>
        <url-pattern>/ajax_restoring_password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmationServlet</servlet-name>
        <url-pattern>/confirmation/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonalAccount</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxChangeAccount</servlet-name>
        <url-pattern>/ajax_change_account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeAccount</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Friends</servlet-name>
        <url-pattern>/myfriends</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxFriends</servlet-name>
        <url-pattern>/ajax_change_friend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Magazine</servlet-name>
        <url-pattern>/magazine/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateMagazine</servlet-name>
        <url-pattern>/create-magazine</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Loader</servlet-name>
        <url-pattern>/load/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjaxMagazineReview</servlet-name>
        <url-pattern>/ajax_magazine_review</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatMagazineIssue</servlet-name>
        <url-pattern>/create-magazine-copy/*</url-pattern>
    </servlet-mapping>
