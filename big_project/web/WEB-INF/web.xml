    <filter>
        <filter-name>AuthCookieFilter</filter-name>
        <filter-class>Helper.AuthCookieFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthCookieFilter</filter-name>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-name>PersonalAccount</servlet-name>
        <servlet-name>Friends</servlet-name>
        <servlet-name>Magazine</servlet-name>
        <!--здесь калякаем все, в которых эт надо вызывать-->
    </filter-mapping>
    
</web-app>